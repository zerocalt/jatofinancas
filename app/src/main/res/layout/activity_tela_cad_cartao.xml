<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadCartao">

    <LinearLayout
        android:id="@+id/menuSuperior"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/menu_top_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/textMenuTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icCartoes"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_credit_card"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/txtMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartão de Crédito"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/semCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/menuSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_lista_cartoes"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icTipoCartao1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_credit_card"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/txtSemCartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhum Cartão de Crédito Cadastrado"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listaCartoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/semCartao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_lista_cartoes"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addcartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="Adicionar"
        app:fabSize="normal"
        app:tint="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2F4F99"/>
</androidx.constraintlayout.widget.ConstraintLayout>
