<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rootMenuConta" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Fundo escurecido quando o menu está aberto -->
    <View
        android:id="@+id/overlayConta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- Menu que desliza para cima, fixado ao rodapé -->
    <LinearLayout
        android:id="@+id/slidingMenuConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_menu_flutuante"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Conta"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp" />

        <!-- Nome da Conta -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputNomeConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_account_balance"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:endIconMode="clear_text"
            android:hint="* Nome da Conta">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNomeConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Saldo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputSaldoConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_attach_money"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:endIconMode="clear_text"
            android:hint="Saldo Inicial (ex: 1234,56)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputSaldoConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="16"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo da Conta -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputTipoConta"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_local_atm"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:hint="Tipo da Conta">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteTipoConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cor (hexadecimal) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputCorConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_color_lens"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:hint="Cor (hexadecimal, ex: #FF0000)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputCorConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mostrar na Tela Inicial -->
        <RadioGroup
            android:id="@+id/radioGroupMostrarNaTelaInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/radioMostrarSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Somar na Tela Inicial"
                android:checked="true"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/radioMostrarNao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não Somar"
                android:layout_marginStart="24dp"
                android:textColor="#FFF" />
        </RadioGroup>

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Conta"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2F4F99"
            android:textColor="#FFF"/>

    </LinearLayout>
</FrameLayout>