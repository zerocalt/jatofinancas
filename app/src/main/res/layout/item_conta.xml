<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp">

        <View
            android:id="@+id/viewCorConta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle" />

        <TextView
            android:id="@+id/txtIniciaisConta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CC"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtNomeConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:text="Nome da Conta"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtSaldoConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 1.000,00"
            android:textStyle="bold"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/txtSaldoContaPrevisao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saldo previsto: R$ 1.000,00"
            android:textColor="@color/cinzaEscuroHint"
            android:textSize="9dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/menu_conta"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_more_vert"
        android:visibility="gone" />

</LinearLayout>