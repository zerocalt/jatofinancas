<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/rootMenuConta" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Fundo escurecido quando o menu está aberto -->
    <View
        android:id="@+id/overlayDespesa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- Menu que desliza para cima, fixado ao rodapé -->
    <LinearLayout
        android:id="@+id/slidingMenuDespesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_menu_flutuante"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tituloDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Despesa"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp" />

        <!-- Valor da Despesa -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputValorDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_attach_money"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:endIconMode="clear_text"
            android:hint="* Valor da Despesa (ex: 1234,56)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputValorDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="16" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nome da Despesa -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputNomeDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:startIconDrawable="@drawable/ic_add_shopping_cart"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:endIconMode="clear_text"
            android:hint="* Descrição da Despesa">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNomeDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rótulo + switch alinhado -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:hint="Despesa fixa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchDespesaPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/white"
                    />

                <TextView
                    android:id="@+id/textoTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago"
                    android:layout_marginStart="12dp"
                    android:textSize="15sp" />
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Categoria da Despesa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/textInputCategoriaDespesa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_category"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="* Categoria da Despesa">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/autoCompleteCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Adicionar Categoria"
                android:src="@drawable/ic_add"
                app:backgroundTint="#2F4F99"
                app:tint="@android:color/white"/>

        </LinearLayout>

        <!-- Data da Despesa -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputDataDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data da Despesa"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_today"
            app:endIconContentDescription="Open Date Picker"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            style="?attr/textInputOutlinedStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDataDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Conta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/menuConta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_account_balance"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="* Conta">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/autoCompleteConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:contentDescription="Adicionar Conta"
                android:src="@drawable/ic_add"
                app:backgroundTint="#2F4F99"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Observação -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputObservacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_edit"
            android:hint="Observação"
            app:boxBackgroundMode="outline"
            android:layout_marginTop="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputObservacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="6"
                android:gravity="top|start"
                android:scrollbars="vertical" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/menuRepete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESPESA REPETE?"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#5A77B1"
            android:textStyle="bold"
            android:paddingTop="10dp"
            />

        <LinearLayout
            android:id="@+id/container_repeticao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Despesa Fixa -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputDespesaFixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="Despesa fixa">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchDespesaFixa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/white"
                        />

                    <TextView
                        android:id="@+id/textoFixa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Essa despesa repete todos os meses?"
                        android:layout_marginStart="12dp"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quantidade -->
            <LinearLayout
                android:id="@+id/container_quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantidade:"
                    android:textSize="18sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btn_decrement"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_azul_redondo"
                        android:contentDescription="Diminuir"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_expand_more" />

                    <EditText
                        android:id="@+id/inputQuantRep"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        />

                    <ImageButton
                        android:id="@+id/btn_increment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:background="@drawable/button_azul_redondo"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_expand_less"
                        android:contentDescription="Aumentar"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- Período -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputPeriodo"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:startIconDrawable="@drawable/ic_today"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="Período">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/autoCompletePeriodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarDespesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Despesa"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2F4F99"
            android:textColor="#FFF"/>

    </LinearLayout>

    <!-- abre o menu cadConta -->
    <FrameLayout
        android:id="@+id/fragmentContainerConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- abre o menu cadCategoria -->
    <FrameLayout
        android:id="@+id/fragmentContainerCategoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</FrameLayout>